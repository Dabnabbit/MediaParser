# Flask Application Configuration
# Copy this file to .env and customize for your environment

# Flask application module
FLASK_APP=app

# Environment: development or production
FLASK_ENV=development

# Secret key for session encryption and CSRF protection
# IMPORTANT: Change this in production to a random string
SECRET_KEY=change-me-in-production

# Timezone for timestamp processing
# Must be a valid IANA timezone identifier (e.g., America/New_York, Europe/London, UTC)
# This replaces the hardcoded -4 hour offset in the original code
TIMEZONE=America/New_York
